<%= stylesheet_link_tag "scm" %>

<div class="contextual">
<%= link_to(l(:button_edit),
               {:action => 'edit', :id => @auto_close.id},
               :class => 'icon icon-edit') %>
<%= link_to(l(:button_delete),
               {:action => 'destroy', :id => @auto_close.id},
               :data => {:confirm => l(:text_are_you_sure)}, :method => :delete,
               :class => 'icon icon-del') %>
</div>

<%= title [l(:label_auto_close_plural), auto_closes_path], @auto_close.id %>

<%= labelled_form_for :auto_close, @auto_close,
        :url => auto_closes_path,
        :html => {:multipart => true, :id => 'auto_close-form'} do |f| %>
    <%= render :partial => 'auto_closes/form', :locals => {:form => f, :disabled => true} %>
<% end %>
